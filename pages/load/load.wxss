.load{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
}
.img{
  display: block;
  margin: 80rpx 0 60rpx 0;
  height: 200rpx;
  width: 200rpx;
}
.message{
  display: flex;
  flex-direction: column;
  width: 600rpx;
  padding: 40rpx;
  border-top: 1px solid gray;
}
.message text{
  font-size:34rpx;
  line-height: 70rpx;
}
button{
  margin-top: 40rpx;
  background-color: green;
  color:white;
}
.l_login{
  margin-top: 30vh;
  font-size: 30rpx;
  color: gray;
}